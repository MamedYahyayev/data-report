<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=white}" disableAnsi="false"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>

        <!--
        <Logger name="com.example.package" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        -->

        <!--
        <Logger name="com.example.package.SomeClass" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        -->
    </Loggers>
</Configuration>